<div class="main-container">
  <div class="container-fluid">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-10 col-sm-push-1 col-md-8 col-md-push-2 col-lg-6 col-lg-push-3">
          <%= form_for(:session, url: agents_login_path, html: { class: "card login-card" }) do |f| %>
            <div class="card-header">
              <h1 class="text-center">Inicia sesión con tu cuenta profesional de TuCasa.com<sup>&reg</sup></h1>
            </div>
            <div class="col-sm-10 col-sm-push-1 clearfix m-t-20 card-body">
              <div class="image_to_preview">
                <%= image_tag("https://s3.amazonaws.com/real.estate.app/agents_images/default_avatar.png", class: "default_image") %>
              </div>
              <% flash.each do |message_type, message| %>
                <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
              <% end %>
              <div class="form-group">
                <%= f.label :email, "Email" %>
                <%= f.email_field :email, placeholder: "Dirección de email", class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :password, "Contraseña" %>
                <div class="input-group">
                  <%= f.password_field :password, placeholder: "Introducir contraseña", class: "form-control" %>
                  <div class="input-group-btn">
                    <%= link_to "Olvido Contraseña?", new_password_reset_path %>
                  </div>
                </div>
              </div>
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span>Recordarme</span>
              <% end %>
              <div class="text-center m-t-20">
                <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
              </div>
              <p class="text-center m-t-20">¿No tienes cuenta? <%= link_to "Registrate ahora!", agents_signup_path %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
