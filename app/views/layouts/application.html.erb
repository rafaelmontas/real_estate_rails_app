                        <option value="500000">RD$ 500,000</option>
                        <option value="1000000">RD$ 1,000,000</option>
                        <option value="1500000">RD$ 1,500,000</option>
                        <option value="2000000">RD$ 2,000,000</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="col-sm-6">
