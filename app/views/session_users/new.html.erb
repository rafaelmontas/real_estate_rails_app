<div class="main-container">
  <div class="container-fluid">
    <div class="row">
      <div class="panel-main">
        <% flash.each do |message_type, message| %>
          <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>
        <div class="col-sm-6 col-left">
          <h2>Inicia Sesión en TuCasa.com</h2>
          <%= form_for(:session_user, url: users_login_path) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "form-control user-login" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Contraseña", class: "user-password" %>
              <%= link_to "(Olvido Contraseña?)", new_password_reset_user_path %>
              <%= f.password_field :password, class: "form-control user-login" %>
            </div>

            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Recordarme en esta computadora</span>
            <% end %>

            <%= f.submit "Iniciar Sesión", class: "btn btn-primary" %>
          <% end %>
          <p>Nuevo Usuario? <%= link_to "Registrate ahora!", users_signup_path %></p>
        </div>
        <div class="col-sm-6">
          <h2>Trabajas en el sector Inmobiliario?</h2>
          <p>Maneja tu perfil, propiedades y más.</p>
          <%= link_to "Iniciar Sesión", agents_login_path, class: "btn btn-primary" %>
          <p>
            ¿No tienes cuenta?
            <%= link_to "Registrate ahora!", agents_signup_path %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
