                <li><i class="listings-grid-icon fa fa-car" aria-hidden="true"> 02</i></li>
              </ul>

            <div class="listings-grid-favorite">
              <i class="listings-grid-icon fa fa-heart-o" aria-hidden="true"></i>
            </div>
          </div>
        <% end %>
      <% end %>
        <!-- <div>your content</div> -->


    </div>
  </div>
<% end %>
