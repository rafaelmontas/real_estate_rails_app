<% content_for :header_search_recommended do %>
  <div class="header-search container">
    <form>
      <div class="search">
        <div class="search-type dropdown">
          <a href="#" data-toggle="dropdown" aria-expanded="false" id="search-link">Renta<i class="fa fa-chevron-down" aria-hidden="true"></i></a>
          <div class="dropdown-menu">
            <div>
              <input type="radio" name="property-type" value="Renta" class="rent_or_buy">
              <span>Renta</span>
            </div>
            <div>
              <input type="radio" name="property-type" value="Compra" class="rent_or_buy">
              <span>Compra</span>
            </div>
          </div>
        </div>
        <div class="search-body">
          <input type="text" class="search-input" placeholder="Buscar" data-rmd-action="advanced-search-open">
          <div class="search-advanced">
            <div class="col-sm-6">
              <div class="form-group form-group-float form-group-active">
                <input type="text" class="form-control" placeholder="Naco, Santo Domingo">
                <label>Sector o Ciudad</label>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label>Tipo de Propiedad</label>
                <select class="select2 select2-hidden-accessible" name="">
                  <option value="Apartamento">Apartamento</option>
                  <option value="Casa">Casa</option>
                  <option value="Villa">Villa</option>
                </select>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label>Precio</label>
                <div class="price-in">
                  <small>Minimo</small>
                  <select class="range" name="">
                    <option value="0">0</option>
                    <option value="500000">RD$ 500,000</option>
                    <option value="1000000">RD$ 1,000,000</option>
                    <option value="1500000">RD$ 1,500,000</option>
                    <option value="2000000">RD$ 2,000,000</option>
                  </select>
                </div>
                <div class="price-in">
                  <small>Maximo</small>
                  <select class="range" name="">
                    <option value="0">0</option>
                    <option value="500000">RD$ 500,000</option>
                    <option value="1000000">RD$ 1,000,000</option>
                    <option value="1500000">RD$ 1,500,000</option>
                    <option value="2000000">RD$ 2,000,000</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label>Habitaciones y Baños</label>
                <div class="price-in">
                  <small>Habitaciones</small>
                  <select class="range" name="">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                  </select>
                </div>
                <div class="price-in">
                  <small>Baños</small>
                  <select class="range" name="">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-xs-12 m-t-10">
              <a href="pages/search.html">Buscar</a>
              <button class="btn prevent cancel">Cancelar</button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
  <div class="header-recommended">
    <div class="my-location">
      <h2 class="my-location-title">Propiedades serca de usted.</h2>
    </div>
    <div class="listings-grid">
      <% @properties.each do |property| %>
        <%= link_to(property_path(property)) do %>
          <div class="listings-grid-item">

              <div class="listings-grid-main">
                <% if property.image.present? %>
                  <%= image_tag property.image_url(:medium) %>
