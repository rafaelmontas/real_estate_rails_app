<% if user_logged_in? && current_user.likes?(property) %>
  <%= link_to(property_like_path(property), method: :delete, remote: true) do %>
    <i class="fa fa-heart" aria-hidden="true"></i>
    <span>Unlike</span>
  <% end %>
<% else %>
  <%= link_to(property_like_path(property), method: :post, remote: true) do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
    <span>Like</span>
  <% end %>
<% end %>
