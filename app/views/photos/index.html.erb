<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Image data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= image_tag photo.image_url(:small, public: true) %></td>
        <td><%= link_to 'Show', property_photo_path(@property, photo) %></td>
        <td><%= link_to 'Edit', edit_property_photo_path(@property, photo) %></td>
        <td><%= link_to 'Destroy', property_photo_url(@property, photo), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_property_photo_path %>
